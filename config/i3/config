bindsym --whole-window $mod+button4 workspace next_on_output
bindsym --whole-window $mod+button5 workspace prev_on_output

bindsym $mod+l exec --no-startup-id betterlockscreen -l dimblur

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id ~/.config/polybar/forest/scripts/launcher.sh


# split in horizontal orientation
bindsym $mod+Shift+h split h

# split in vertical orientation
bindsym $mod+Shift+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+s layout toggle split
bindsym $mod+e exec thunar

# toggle tiling / floating
