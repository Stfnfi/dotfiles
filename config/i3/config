exec --no-startup-id copyq
exec --no-startup-id guake
exec --no-startup-id /usr/libexec/lxqt-policykit-agent
exec_always --no-startup-id setxkbmap -layout us,rs,rs -variant ,latinyz,yz -option grp:win_space_toggle
exec --no-startup-id /home/stefanfi/Applications/PreMiD-Portable_2e07fe0d5631c868e883c002706006e8.AppImage
